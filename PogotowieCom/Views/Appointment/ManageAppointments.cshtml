@model List<Appointment>
@{
    ViewData["Title"] = "ManageAppointments";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="container">
    <div class="col-lg-12 text-center">
        <h2>Zarządzaj Wizytami</h2>
    </div>
    <div class="col-lg-12">
        <table class="table table-bordered">
            <thead><tr><th>Nr Wizyty</th><th>Miejsce</th><th>Data</th><th>Godzina Rozpoczęcia</th><th>Pozostało wolnych miejsc</th></tr></thead>
            @foreach (var appointment in Model)
            {
                <tr>
                    <td>@appointment.AppointmentId</td><td>@appointment.Place.PlaceName</td><td>@appointment.AppointmentDate.Value.ToShortDateString()</td><td>@appointment.AppointmentStart.Value.ToShortTimeString()</td><td>@(appointment.PlacesAvailable-appointment.NumberOfPatients)</td>
                </tr>
            }
        </table>
    </div>
    <div class="col-lg-12">
        <a class="btn btn-primary" asp-controller="Appointment"  asp-action="ChoosePlace">Dodaj Wizytę</a>
    </div>
</div>
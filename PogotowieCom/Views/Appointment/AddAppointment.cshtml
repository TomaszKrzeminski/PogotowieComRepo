@model AddAppointmentViewModel
@{
    ViewData["Title"] = "AddAppointment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12 text-center"><h2>Dodaj Wizytę</h2></div>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Nazwa Miejsca</th><th>Kraj</th><th>Miasto</th><th>Ulica</th><th>Nr Budynku</th><th>Pokój</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Model.place.PlaceName</td><td>@Model.place.Country</td><td>@Model.place.City</td><td>@Model.place.Street</td><td>@Model.place.BuildingNumber</td><td>@Model.place.Room</td>
                </tr>
            </tbody>
        </table>
        @*<div class="text-danger" asp-validation-summary="All"></div>*@
        <form asp-action="AddAppointment" asp-controller="Appointment">
            <div class="row">
                <div class="col-lg-12 form-group ">
                    <input asp-for="place.PlaceName" type="hidden">
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 form-group ">
                    <input asp-for="place.Country" type="hidden">
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 form-group ">
                    <input asp-for="place.City" type="hidden">
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 form-group ">
                    <input asp-for="place.Street" type="hidden">
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 form-group ">
                    <input asp-for="place.BuildingNumber" type="hidden">
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 form-group ">
                    <input asp-for="place.Room" type="hidden">
                </div>
            </div>


            <div class="row">
                <div class="col-lg-12 form-group ">
                    <input asp-for="DoctorId" value="@Model.DoctorId" type="hidden"> 
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 form-group ">
                    <input asp-for="PlaceId" value="@Model.PlaceId" type="hidden"> 
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 form-group ">
                    <input asp-for="Appointment.NumberOfPatients" value="0" type="hidden">
                </div>
            </div>
            <div class="row">

                <div class="col-lg-12 form-group ">
                    <div><span asp-validation-for="Appointment.AppointmentDate" class="text-danger"></span></div>
                    <lable>Data wizyty</lable>
                    <input asp-for="Appointment.AppointmentDate" class="form-control">
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 form-group ">
                    <div><span asp-validation-for="Appointment.AppointmentStart" class="text-danger"></span></div>
                    <lable>Czas rozpoczęcia</lable>
                    <input type="time" min="06:00" max="22:00" asp-for="Appointment.AppointmentStart" class="form-control">
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 form-group ">
                    <div><span asp-validation-for="Appointment.AppointmentEnd" class="text-danger"></span></div>
                    <lable>Czas zakończenia</lable>
                    <input type="time" min="06:00" max="22:00" asp-for="Appointment.AppointmentEnd" class="form-control">
                </div>
            </div>

            <div class="row">
                <div class="col-lg-12 form-group ">
                    <div><span asp-validation-for="Appointment.PlacesAvailable" class="text-danger"></span></div>
                    <lable>Dostępnych Miejsc</lable>
                    <input asp-for="Appointment.PlacesAvailable" class="form-control">
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 form-group ">
                    <div><span asp-validation-for="Appointment.VisitPrice" class="text-danger"></span></div>
                    <lable>Cena Wizyty</lable>
                    <input asp-for="Appointment.VisitPrice" class="form-control">
                </div>
            </div>


            <div class="row">
                <div class="col-lg-2">
                    <button class="btn btn-warning" type="submit">Dodaj</button>
                </div>
            </div>
        </form>

    </div>
</div>




@section Scripts
{
    <script type="text/javascript">
        $(document).ready(function () { $("input.input-validation-error").closest(".form-group").addClass("has-danger"); });
    </script>
}

 
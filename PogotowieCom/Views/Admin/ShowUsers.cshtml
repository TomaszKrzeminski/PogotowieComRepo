@model ShowUsersViewModel
@{
    ViewData["Title"] = "ShowUsers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Użytkownicy</h2>
<div class="container">
    @if (Model.Users.Count > 0)
    {


        foreach (var user in Model.Users)
        {
    <form asp-action="Delete" asp-controller="Admin">
        <div class="row">
            <div class="col-lg-12 form-group ">
               
                
                <h5><span><span class="text-warning">Email:</span>   @user.Email</span>  <span><span class="text-warning">Imię:</span>    @user.UserName</span>  <span><span class="text-warning">Nazwisko:</span>  @user.Surname</span>               </h5>
               <input type="hidden" value="@user.Id" name="id" />
                <input class="btn btn-success" type="submit" value="Usuń" />
            </div>
        </div>
    </form>
   
        }

        
    }
</div>

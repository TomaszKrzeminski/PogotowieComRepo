@model SearchDoctorViewModel

@{Layout = null; }



@if(Model.Users!=null&&Model.Users.Count>0)
{
<div class="col-lg-12">
    <table class="table-bordered">
        <thead><tr><th class="col-lg-3">Nazwisko </th><th class="col-lg-3">Imię </th><th class="col-lg-3 text-center">Rezerwuj wizytę </th></tr></thead>






        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.Surname</td>
                <td>@user.UserName</td>
                <td class="text-center">
                    <form method="get" asp-action="ShowAppointments" asp-controller="Appointment">
                        <input type="hidden" name="DoctorId" value="@user.Id" />
                        <input type="hidden" name="Country" value="@Model.Country" />
                        <input type="hidden" name="City" value="@Model.City" />
                        <button class="btn btn-danger" type="submit">Rezerwacja</button>
                    </form>
                </td>

            </tr>
        }

    </table>
    </div>
}









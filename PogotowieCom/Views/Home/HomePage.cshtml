        <div class=" form-group">
            <h3>Powiedz co Ci dolega</h3>

            @for (int i = 0; i < 5; i++)
            {
                <label asp-name="Objaw @(i+1)" class="col-lg-12">
                   
                        <select class="form-control" name="Ailments[@i].Text">
                            @foreach (var tag in Model.AllAilments)
                            {

                                <option>@tag</option>
                            }
                        </select>
                   

                </label>
            }




        </div>




        <div class="row">

@model CreateDoctorModel
@{
    ViewData["Title"] = "Create";
    Layout = "_Layout";
}

<div class="bg-primary m-1 p-1 text-white"><h4>Tworzenie Użytkownika</h4></div>
<div asp-validation-summary=" All" class="text-danger"></div>

<form asp-action="CreateDoctor" method="post">


    <input type="hidden" name="ChooseRole" value="@Model.ChooseRole" />



    <div class="form-group">
        <label asp-for="Name">Imię</label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Surname">Nazwisko</label>
        <input asp-for="Surname" class="form-control" />
    </div>


    <div class="form-group">
        <label asp-for="City">Miasto</label>
        <input asp-for="City" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="ZipCode">Kod Pocztowy</label>
        <input asp-for="ZipCode" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Email">Adres Email</label>
        <input asp-for="Email" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="PhoneNumber">Telefon</label>
        <input asp-for="PhoneNumber" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="PriceForVisit">Cena za Wizytę</label>
        <input asp-for="PriceForVisit" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Password">Hasło</label>
        <input asp-for="Password" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Utwórz</button>
    <a asp-action="Index" class="btn btn-secondary">Anuluj</a>

</form>


 